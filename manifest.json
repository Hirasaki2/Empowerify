{

  "manifest_version": 2,
  "name": "Empowerify",
  "version": "2.0.1.3",

  "description": "This tool adds a (Do you want to leave? and Redirect to old) to a new school website empower.",

  "icons": {
	  "128": "src/icons/icon.png"
  },
  "background": {
    "scripts": ["src/js/background.js"]
  },
  "permissions": [
	  "storage",
	  "*://*.empowerlearning.net/*",
	  "tabs",
	  "webRequest",
	  "webRequestBlocking"
  ],
  "options_ui": {
    "page": "src/html/options.html"
  },
  "browser_action": {
    "default_popup": "src/html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.empowerlearning.net/iFrame.aspx?iCtrl=*"],
      "js": ["src/js/empowerify.js"]
    }
  ],
  "applications": {
    "gecko": {
      "update_url": "https://ryanhir.github.io/Empowerify/update.json"
    }
  }

}
